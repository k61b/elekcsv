{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"noEmit": true,
		"isolatedModules": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@elekcsv/core": ["../../packages/core/src/index.ts"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
