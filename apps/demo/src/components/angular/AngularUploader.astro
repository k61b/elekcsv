<div id="angular-uploader" class="w-full font-sans h-[520px]">
  <input id="angular-file-input" type="file" accept=".csv" class="hidden" />

  <div
    id="angular-empty-view"
    class="relative border-2 border-dashed border-neutral-300 bg-white hover:border-black hover:bg-neutral-50 p-12 text-center transition-all duration-200 cursor-pointer flex flex-col items-center justify-center h-full w-full"
  >
    <div id="angular-loading" class="text-black font-medium tracking-tight animate-pulse flex flex-col items-center hidden">
      <svg class="w-8 h-8 mb-4 animate-spin" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      Processing <strong>sample.csv</strong>...
    </div>

    <div id="angular-idle" class="flex flex-col items-center">
      <div id="angular-upload-icon-wrap" class="p-4 rounded-full mb-4 transition-colors bg-neutral-100 text-black">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5"></path>
        </svg>
      </div>
      <h3 class="text-black font-semibold text-xl mb-2 mt-0 tracking-tight">Upload your CSV</h3>
      <p class="text-neutral-500 text-sm max-w-sm mx-auto mb-8 leading-relaxed">
        Drag and drop your file here or click the button below to browse your computer.
      </p>
      <button id="angular-select-btn" type="button" class="px-6 py-3 bg-black text-white text-sm font-semibold uppercase tracking-wider hover:bg-neutral-800 transition-colors">
        Select File
      </button>
    </div>
  </div>

  <div id="angular-result-view" class="border-2 border-black bg-white relative flex flex-col h-full w-full hidden">
    <div class="absolute -top-3 left-6 bg-white px-2 text-sm font-bold uppercase tracking-widest text-black">Output Context</div>
    <div class="flex items-end justify-start p-6 pb-4 gap-4">
      <div class="flex gap-4 text-xs font-mono text-neutral-800 h-10">
        <span class="flex items-center gap-1.5 px-3 border border-neutral-300 whitespace-nowrap"><strong class="text-black font-bold">Rows:</strong> <span id="angular-rows">0</span></span>
        <span class="flex items-center gap-1.5 px-3 border border-neutral-300 whitespace-nowrap"><strong class="text-black font-bold">Errors:</strong> <span id="angular-errors">0</span></span>
        <span id="angular-time-wrap" class="flex items-center gap-1.5 px-3 border border-neutral-300 whitespace-nowrap hidden"><strong class="text-black font-bold">Time:</strong> <span id="angular-time">0ms</span></span>
      </div>
      <div class="h-10">
        <button id="angular-reload-btn" type="button" class="h-full text-xs font-bold uppercase tracking-widest border-2 border-black px-4 hover:bg-black hover:text-white transition-colors flex items-center justify-center gap-2 cursor-pointer">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5"></path>
          </svg>
          Load New File
        </button>
      </div>
    </div>
    <div class="p-0 flex-1 border-t border-neutral-200 overflow-hidden">
      <pre class="m-0! p-6! bg-[#fafafa]! rounded-none! text-xs h-full w-full overflow-auto border-0!"><code id="angular-json"></code></pre>
    </div>
  </div>
</div>

<script>
  import { CSVImporterService } from "@elekcsv/angular";

  const root = document.getElementById("angular-uploader");
  if (!root) {
    throw new Error("Angular uploader root not found");
  }

  const input = document.getElementById("angular-file-input");
  const emptyView = document.getElementById("angular-empty-view");
  const resultView = document.getElementById("angular-result-view");
  const loading = document.getElementById("angular-loading");
  const idle = document.getElementById("angular-idle");
  const rows = document.getElementById("angular-rows");
  const errors = document.getElementById("angular-errors");
  const timeWrap = document.getElementById("angular-time-wrap");
  const time = document.getElementById("angular-time");
  const json = document.getElementById("angular-json");
  const selectBtn = document.getElementById("angular-select-btn");
  const reloadBtn = document.getElementById("angular-reload-btn");

  let parsingTime = null;

  const importer = new CSVImporterService({
    schema: {
      columns: {
        id: { type: "number" },
        first_name: { type: "string" },
        last_name: { type: "string" },
        email: { type: "string", rules: [{ rule: "required" }] },
        age: { type: "number" },
        city: { type: "string" },
        signup_date: { type: "date" },
        is_active: { type: "boolean" },
      },
    },
    onComplete: (result) => {
      parsingTime = result.stats.parseTime + result.stats.validationTime;
      render();
    },
    onStepChange: () => {
      render();
    },
    onError: () => {
      render();
    },
  });

  const openPicker = () => {
    if (!(input instanceof HTMLInputElement)) return;
    input.value = "";
    input.click();
  };

  const loadFromInput = () => {
    if (!(input instanceof HTMLInputElement)) return;
    if (input.files && input.files.length > 0) {
      importer.loadFile(input.files[0]);
      input.value = "";
    }
  };

  const setDragging = (active) => {
    if (!emptyView) return;
    emptyView.classList.toggle("border-black", active);
    emptyView.classList.toggle("bg-neutral-100", active);
    emptyView.classList.toggle("scale-[0.99]", active);
    emptyView.classList.toggle("border-neutral-300", !active);
    emptyView.classList.toggle("bg-white", !active);
  };

  const render = () => {
    const state = importer.currentState;
    const hasData = Boolean(state.mappedData && state.mappedData.length > 0);
    const isLoading = importer.isLoading();

    if (emptyView) emptyView.classList.toggle("hidden", hasData);
    if (resultView) resultView.classList.toggle("hidden", !hasData);
    if (loading) loading.classList.toggle("hidden", !isLoading || hasData);
    if (idle) idle.classList.toggle("hidden", isLoading || hasData);

    if (rows) rows.textContent = String(state.mappedData?.length ?? 0);
    if (errors) errors.textContent = String(state.validation?.stats?.errorRows ?? 0);

    if (timeWrap && time) {
      timeWrap.classList.toggle("hidden", parsingTime === null);
      if (parsingTime !== null) time.textContent = `${parsingTime}ms`;
    }

    if (json) {
      const mapped = state.mappedData ?? [];
      const preview = mapped.slice(0, 3);
      const data = mapped.length > 3 ? preview.concat([["... (truncated)"]]) : preview;
      json.textContent = JSON.stringify(
        {
          data,
          errors: state.validation?.errors?.slice(0, 5),
        },
        null,
        2,
      );
    }
  };

  if (input instanceof HTMLInputElement) input.addEventListener("change", loadFromInput);
  if (selectBtn instanceof HTMLButtonElement) selectBtn.addEventListener("click", openPicker);
  if (reloadBtn instanceof HTMLButtonElement) reloadBtn.addEventListener("click", openPicker);

  if (emptyView) {
    ["dragenter", "dragover"].forEach((eventName) => {
      emptyView.addEventListener(eventName, (e) => {
        e.preventDefault();
        e.stopPropagation();
        setDragging(true);
      });
    });

    ["dragleave"].forEach((eventName) => {
      emptyView.addEventListener(eventName, (e) => {
        e.preventDefault();
        e.stopPropagation();
        setDragging(false);
      });
    });

    emptyView.addEventListener("drop", (e) => {
      e.preventDefault();
      e.stopPropagation();
      setDragging(false);
      const files = e.dataTransfer?.files;
      if (files && files.length > 0) {
        importer.loadFile(files[0]);
      }
    });
  }

  render();
</script>
