---
// src/layouts/Layout.astro
import "../styles/global.css";
import Sidebar from "../components/Sidebar.astro";

interface Props {
	title: string;
	description?: string;
}

const { title, description = "elekcsv Documentation" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | elekcsv documentation</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="min-h-screen bg-white text-neutral-900 antialiased selection:bg-neutral-900 selection:text-white"
  >
    {/* Header */}
    <header
      class="h-16 border-b border-neutral-200 bg-white/80 backdrop-blur-md sticky top-0 z-50"
    >
      <div
        class="max-w-[1400px] mx-auto px-6 h-full flex items-center justify-between"
      >
        <a
          href="/"
          class="flex items-center gap-1.5 font-bold tracking-tight text-lg no-underline!"
          style="text-decoration:none;"
        >
          <img src="/logo.svg" alt="elekcsv" class="w-7 h-7" />
          elekcsv
        </a>
        <div class="flex items-center gap-6">
          <a
            href="https://github.com/k61b/elekcsv"
            target="_blank"
            class="text-sm text-neutral-500 hover:text-black transition-colors"
            style="text-decoration:none;"
          >
            GitHub
          </a>
        </div>
      </div>
    </header>

    {/* Main Interface */}
    <div class="max-w-[1400px] mx-auto px-6 flex items-start">
      <Sidebar />

      <main
        class="grow max-w-[800px] px-8 py-12 lg:px-16 min-h-[calc(100vh-64px)] pb-32"
      >
        <article>
          <slot />
        </article>

        <div
          class="mt-20 pt-8 border-t border-neutral-200 flex justify-between items-center text-sm text-neutral-500"
        >
          <p>
            Â© {new Date().getFullYear()} elekcsv. Open Source under Apache-2.0 License.
          </p>
        </div>
      </main>
    </div>
  </body>
</html>
